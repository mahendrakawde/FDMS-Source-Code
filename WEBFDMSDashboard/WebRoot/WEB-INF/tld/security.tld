<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE taglib
  PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
  <tlib-version>1.0</tlib-version>
  <jsp-version>1.2</jsp-version>
  <short-name>security</short-name>
  <uri/>
  <display-name>Security Tag</display-name>
  <description>Tag that validates user security level prior to rendering html to the page.</description>

  <tag>
    <name>token</name>
    <tag-class>com.aldorsolutions.dashboard.security.SecurityTag</tag-class>
    <body-content>JSP</body-content>
    <description>Tag to change Row color for a given rowNumber.</description>
    <attribute>
        <name>render</name>
        <required>false</required>
        <rtexprvalue>true</rtexprvalue>
    </attribute>
    <attribute>
        <name>hasRole</name>
        <required>true</required>
        <rtexprvalue>true</rtexprvalue>
    </attribute>
    <attribute>
        <name>excludeRole</name>
        <required>false</required>
        <rtexprvalue>true</rtexprvalue>
    </attribute>

  </tag>
</taglib>