<%@ page language="java" pageEncoding="ISO-8859-1"%>

<%@ taglib uri="http://struts.apache.org/tags-bean" prefix="bean"%>
<%@ taglib uri="http://struts.apache.org/tags-html" prefix="html"%>
<%@ taglib uri="http://struts.apache.org/tags-logic" prefix="logic"%>
<%@ taglib uri="http://struts.apache.org/tags-tiles" prefix="tiles"%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html:html lang="true">
<head>
<html:base />

<title>Dashboard Password Recovery</title>

<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<link rel="stylesheet" type="text/css" href="css/login.css">
</head>

<body>
	<html:errors />

	<html:form action="/lostPassword" method="post" focus="username">

		<div id="login">
			<div class="top"></div>
			<div class="content">

				<h3>Dashboard Password Recovery</h3>

				<table border="0" align="center">
					<tr>
						<td>Username:</td>
						<td><html:text property="username" />
						</td>
					</tr>
					<tr>
						<td colspan="2" align="center"><html:submit />
						</td>
					</tr>
				</table>
			</div>
			<div class="bottom">
				<div class="bottomText">
					<html:link action="/login.jsp">Login Page</html:link>
				</div>
			</div>
		</div>



	</html:form>
</body>
</html:html>
