function formatSSN(input) {

    ssn = input.value;
    if (ssn.length == 3 || ssn.length == 7) {
        ssn += " ";
    }
    
    input.value = ssn;        
}

function formatPHN(input) {

    phn = input.value;
    if (phn.length == 4 || phn.length == 8) {
        phn += " ";
    }
    
    input.value = phn;        
}